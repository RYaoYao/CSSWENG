{{> nav3 active}}

<div class="container mt-2 p-5">
    <div class="border border-light p-3">
	<div class="card-header row">
		<div class="col-md-12">
			<h3>
				Tenant Profile
			</h3>
		</div>
	</div>
    <div class="card-body">
	<div class="row mb-3">
		<div class="col-md-6">
			<label>Name</label>
		</div>
		<div class="col-md-6"> 
        <input type="text" id="pronfileame" class= "form-control input-lg" value="{{tenant.name}}"  readonly>
		</div>
	</div>
    <div class="row mb-3">
		<div class="col-md-6">
			<label>Unit Number</label>
		</div>
		<div class="col-md-6"> 
        <input type="number" id="profileunit" class= "form-control input-lg" value="{{tenant.unit.unitno}}" readonly>
		</div>
	</div>
    <div class="row mb-3">
		<div class="col-md-6">
			<label>Email Address</label>
		</div>
		<div class="col-md-6"> 
        <input type="email" id="eprobid" class= "form-control input-lg" value="{{tenant.email}}" readonly>
		</div>
	</div>

    <div class="row mb-3">
		<div class="col-md-6">
			<label>Contact Number</label>
		</div>
		<div class="col-md-6"> 
        <input type="phone" id="eprobid" class= "form-control input-lg" value="{{tenant.contactno}}" readonly>
		</div>
	</div>

<div class="row mb-3">
		<div class="col-md-6">
			<label>Gender</label>
		</div>
		<div class="col-md-6"> 
        <input type="number" id="eprobid" class= "form-control input-lg"  readonly>
		</div>
	</div>

<div class="row mb-3">
		<div class="col-md-6">
			<label>Rent</label>
		</div>
		<div class="col-md-6"> 
        <input type="number" id="eprobid" class= "form-control input-lg"  value="{{tenant.unit.payment}}"readonly>
		</div>
	</div>

<div class="row mb-3">
		<div class="col-md-6">
			<label>Day of Payment</label>
		</div>
		<div class="col-md-6"> 
        <input type="text" id="eprobid" class= "form-control input-lg" value="{{tenant.daypayment}}th" readonly>
		</div>
	</div>

<div class="row mb-3">
		<div class="col-md-6">
			<label>Months Missed</label>
		</div>
		<div class="col-md-6"> 
        <input type="number" id="eprobid" class= "form-control input-lg " value="{{tenant.mosmissed}}"readonly>
		</div>
	</div>

    </div>
</div>
</div>