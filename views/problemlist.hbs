        <table id="problist" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Problem Id</th>
                    <th>Unit No.</th>
                    <th>Problem Type</th>
                    <th>Problem Description</th>
                    <th>Status</th>
                    
                </tr>
            </thead>
            <tbody>
            {{#each problist}}
             <tr>
                 <td>{{probid}}</td>
                <td>{{unitno}}</td>
                <td>{{probtype}}</td>
                <td>{{problemdes}}</td>
                <td>{{probstatus}}</td>

